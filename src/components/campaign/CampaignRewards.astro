---
import { REWARDS } from '@config/site';

import H2 from '@components/base/H2.astro';
import Section from '@components/base/Section.astro';
---

<Section>
  <H2>Rewards</H2>
  <div class='grid grid-cols-1 xl:grid-cols-2 gap-8 mt-4'>
    {
      REWARDS.map((reward) => (
        <div class='p-8 flex flex-col rounded gap-2 bg-[radial-gradient(ellipse_at_top_left,_var(--tw-gradient-stops))] from-yellow-200 via-green-200 to-green-300'>
          <p class='text-3xl'>{reward.value}$</p>
          <p class='font-bold uppercase tracking-wider'>{reward.name}</p>

          <p class='font-sm'>{reward.description}</p>
        </div>
      ))
    }
  </div>
</Section>
